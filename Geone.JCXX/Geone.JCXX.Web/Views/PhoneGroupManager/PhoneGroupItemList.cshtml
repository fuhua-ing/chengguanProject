@{
    ViewBag.Title = "号码管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

    $(function () {

        var GroupID = getQueryString("GroupID");
        $("#hfGroupID").val(GroupID);
        //初始化表格
        var param = $("#queryTab").getJsonValues().jsonData;

        $('#gd_url').InitGird({ url: '/PhoneGroupManager/GetItemGrid', queryParams: param, pageSize: 10});

       
    })

    //查询
    function Search() {
        var param = $("#queryTab").getJsonValues().jsonData;
        $('#gd_url').datagrid("load", param);
    }
    //刷新
    function Refresh() {
        $("#queryTab .easyui-textbox").textbox('clear');
        $("#queryTab .easyui-combobox").combobox('setValue', '');
        Search();
    }

    //新增
    function Add() {
        var GroupID = $("#hfGroupID").val();
        $("#win").OpenWin({ title: "短信号码组-新增", url: "/PhoneGroupManager/PhoneGroupItemForm?GroupID=" + GroupID, width: 800, height: 450 });
    }
    //修改
    function Edit() {
        if ($('#gd_url').datagrid('IsSelectedRow')) {
            var row = $('#gd_url').datagrid('getSelected');
            $("#win").OpenWin({ title: "短信号码组-编辑", url: "/PhoneGroupManager/PhoneGroupItemForm?ID=" + row.ID, width: 800, height: 450 });
        }
    }
    //删除
    function Del() {
        if ($('#gd_url').datagrid('IsSelectedRow')) {
            $.messager.confirm('确认', '确认删除？', function (r) {
                if (r) {
                    var row = $('#gd_url').datagrid('getSelected');
                    $.DoAjax({
                        needWaiting: true,
                        url: '/PhoneGroupManager/DelItemInfo',
                        dataParams: { ID: row.ID },
                        successFunc: function (result) {
                            if (result.StatusCode == "200") {
                                $.messager.alert('提示', '删除成功', 'info', function () {
                                    Search();
                                    $('#treePhoneGroup').tree('reload');
                                    parent.callback(isOk);
                                });
                            }
                            else {
                                console.log(result);
                                $.messager.alert('提示', '删除失败');
                            }
                        }
                    });
                }
            });
        }
    }
    //回调
    function callback(isOk) {
        $("#win").window('close');
        if (isOk) {
            Search();
            $('#treePhoneGroup').tree('reload');
            parent.callback(isOk);
        }
    }
</script>
<div id="win"></div>

<div class="content_grid">
    <div class="StTitle" id="ToolBar">
        <div class="sipac_rtsearchbar">
            <div class="s_s_mBox">
                <a title="点击下拉内容较多搜索" class="s_s_morebtn" href="#">
                    <i class="fa fa-chevron-down"></i>
                </a>
            </div>
        </div>
        <div class="sipac_searchBox sipac_form" id="queryTab">
            <fieldset class="layui-elem-field">
                <legend>更多查询</legend>
                <div class="sipac_form_row">
                    <label>姓名</label> <input type="hidden" id="hfGroupID" name="GroupID" />
                    <input class="easyui-textbox" name="Like_PersonName">
                    <label>是否有效</label><input class="easyui-combobox Dict_Enabled defaultAll" name="Enabled" />
                    <button class="layui-btn" onclick="Search()"><i class="fa fa-search"></i>搜索</button>
                </div>
                <div class="s_s_close"><a href="javascript:void(0);" title="点击收起"><i class="fa fa-chevron-up"></i></a></div>
            </fieldset>
        </div>
        <div class="sipac_table_menu">
            <button class="layui-btn" onclick="Add()"><i class="fa fa-plus"></i>新增</button>
            <button class="layui-btn layui-btn-warning" onclick="Edit()"><i class="fa fa-edit"></i>修改</button>
            <button class="layui-btn layui-btn-danger" onclick="Del()"><i class="fa fa-minus"></i>删除</button>
            <button class="layui-btn layui-btn-info" onclick="Refresh()"><i class="fa fa-refresh "></i>刷新</button>
        </div>
    </div>

    <table id="gd_url">
        <thead>
            <tr>
                <th data-options="field:'PersonName',width:20">姓名</th>
                <th data-options="field:'Phone',width:20">号码</th>
                <th data-options="field:'Enabled',width:20,align:'center',formatter:formatter_valid">是否有效</th>
                <th data-options="field:'Note',width:40">备注</th>
            </tr>
        </thead>
    </table>
</div>